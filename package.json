{
  "name": "@hrtools/chatbot-sdk",
  "version": "0.0.6",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "format": [
      "cjs",
      "esm"
    ],
    "clean": true,
    "dts": true,
    "treeshake": true
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "prepare": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "author": "Polarity (info@polarity.dev)",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/eventsource": "^1.1.15",
    "@types/node": "^22.14.0",
    "eslint": "^9.24.0",
    "eventsource": "^3.0.6",
    "json-schema": "^0.4.0",
    "json-schema-to-ts": "^3.1.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "events": "^3.3.0",
    "ts-pattern": "^5.7.0"
  }
}
